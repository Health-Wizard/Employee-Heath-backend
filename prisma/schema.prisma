generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Register {
  id           Int       @id @default(autoincrement())
  name         String
  username     String    @unique
  password     String
  companyEmail String
  role         String
  employee     Employee?
}

model Employee {
  id            Int      @id @default(autoincrement())
  empId         Int      @unique
  username      String
  name          String
  companyEmail  String
  designation   String
  dateOfJoining DateTime
  salary        String
  role          String
  gender        String
  age           Int
  register      Register @relation(fields: [empId], references: [id])
}

model Channels {
  id               Int      @id @default(autoincrement())
  url              String   @unique
  name             String   @unique
  create_timestamp DateTime
  type             String
  member_count     Int
  last_message_id  Int
}
