// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Register {
  id           Int       @id @default(autoincrement())
  name         String
  username     String    @unique
  password     String
  companyEmail String
  role         String
  employee     Employee?
}

model Employee {
  id            Int       @id @default(autoincrement())
  empId         Int       @unique
  register      Register? @relation(fields: [empId], references: [id])
  username      String
  name          String
  companyEmail  String
  designation   String
  dateOfJoining DateTime
  salary        String
  role          String
  gender        String
}
