generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Register {
  id           Int       @id @default(autoincrement())
  name         String
  username     String    @unique
  password     String
  companyEmail String    @unique
  employee     Employee?
  admin        Admin?
}

model Employee {
  id            Int       @id @default(autoincrement())
  empId         Int       @unique
  username      String    @unique
  name          String
  companyEmail  String    @unique
  designation   String?
  dateOfJoining DateTime?
  salary        String?
  role          String?
  gender        String?
  age           Int?
  department    String?
  register      Register  @relation(fields: [empId], references: [id])
  answer        Answer[]
}

model Admin {
  id           Int      @id @default(autoincrement())
  empId        Int      @unique
  register     Register @relation(fields: [empId], references: [id])
  username     String   @unique
  companyEmail String   @unique
  companyName  String
  role         String?
}

model Channels {
  id               Int      @id @default(autoincrement())
  url              String   @unique
  name             String   @unique
  create_timestamp DateTime
  type             String
  member_count     Int
  last_message_id  Int
}

enum AnswerValue {
  strongly_agree    @map("5")
  agree             @map("4")
  neutral           @map("3")
  disagree          @map("2")
  strongly_disagree @map("1")
}

model Question {
  id       Int      @id @default(autoincrement())
  question String
  answer   Answer[]
}

model Answer {
  id       Int         @id @default(autoincrement())
  qId      Int
  empId    Int
  value    AnswerValue
  question Question    @relation(fields: [qId], references: [id])
  employee Employee    @relation(fields: [empId], references: [id])
}
